<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.google.com/schemas/sitemap/0.84">
<% @chapters.each do |chapter| %>
  <url>
    <loc><%= chapter_url(chapter) %></loc>
    <lastmod><%= chapter.updated_at.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
  </url>
<% end %>
<% @comments.each do |comments| %>
  <url>
    <loc><%= show_comments_url(comments.chapter_id, comments.commentable_id) %></loc>
    <changefreq>weekly</changefreq>
  </url>
<% end %>
</urlset>

